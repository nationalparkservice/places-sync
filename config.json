{
  "database": {
    "test_db": {
      "connection": "{{env.PWD}}/test.sqlite3",
      "type": "sqlite"
    },
    "sync_db": {
      "connection": "{{env.PWD}}/sync.sqlite3",
      "type": "sqlite"
    },
    "defaults": {
      "rootDirectory": "{{env.PWD}}/sql",
      "delimiter": ";",
      "fileDesignator": "file:///",
      "fileOptions": {
        "encoding": "utf8"
      }
    }
  }
}
