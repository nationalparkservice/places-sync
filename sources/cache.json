{
  "name": "cache",
  "description": "The database that keeps track of all synchronizations",
  "connection": {
    "type": "sqlite",
    "filePath": "{{env.HOME}}/.sync/cache.sqlite"
  },
  "columns": [{
    "name": "key",
    "type": "text"
  }, {
    "name": "process",
    "type": "text"
  }, {
    "name": "source",
    "type": "text"
  }, {
    "name": "hash",
    "type": "numeric"
  }, {
    "name": "data",
    "type": "blob"
  }, {
    "name": "removed",
    "type": "numeric"
  }],
  "primaryKey": ["process", "source", "key"]
}
